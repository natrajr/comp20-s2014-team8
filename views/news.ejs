<!doctype html>

<html>
<head>
	<title>CryptoTicker</title>
	<meta charset="utf-8">
	<link rel='stylesheet' type="text/css" href='../static/bootstrap.min.css'>

</head>

<body>
	<div class="navbar navbar-inverse navbar-fixed-top" role="navigation">
      	<div class="container">
        	<div class="navbar-header">
            	<button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
            		<span class="sr-only">Toggle navigation</span>
            		<span class="icon-bar"></span>
            		<span class="icon-bar"></span>
            		<span class="icon-bar"></span>
          		</button>
        	</div>
        	<a class="navbar-brand" href="/">CryptoTicker</a>
        	<div class="navbar-collapse collapse">
          		<ul class="nav navbar-nav">
            		<li><a href="/">Home</a></li>
                    <li class="active"><a href="#">News</a></li>
            		<li><a href="/currency">Exchange Rates</a></li>
            		<li><a href="/market">Market Data</a></li>

            	</ul>
        	</div>
        </div>
    </div>

	<div class="container theme-showcase" role="main">
		<div class="jumbotron">
        	<h1 class="text-center">Crypto Currency News</h1>
            <ul class="list-group">
                <% for (var i = 0; i < newsItems.length; i++){ %>
                    <li class="list-group-item">
                    <a href = 
                    <%= "http://www.cryptoarticles.com" + newsItems[i].url %>
                    target = "_blank">
                        <%= newsItems[i].title %>
                    </a></li>
                <% } %>
            </ul>
        </div>
    </div>
</body>

</html>


<script src="http://ajax.googleapis.com/ajax/libs/jquery/1.11.0/jquery.min.js"></script>
<script src="../static/js/bootstrap.min.js"></script>